{
    "name": "onduline_racks",
    "author": "Mikołaj Laskowski",
    "version": "1.5.2",
    "description": "Pomocnik magazyniera Onduline.",
    "repository": "https://github.com/herb-chan/onduline_racks",
    "publish": {
        "provider": "github",
        "releaseType": "release"
    },
    "homepage": "./",
    "dependencies": {
        "@craco/craco": "^7.1.0",
        "@fortawesome/fontawesome-svg-core": "^6.5.1",
        "@fortawesome/free-solid-svg-icons": "^6.5.1",
        "@fortawesome/react-fontawesome": "^0.2.0",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "browserify-zlib": "^0.2.0",
        "concurrently": "^8.2.2",
        "crypto-browserify": "^3.12.0",
        "mongodb": "^6.4.0",
        "os-browserify": "^0.3.0",
        "process": "^0.11.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "stream-browserify": "^3.0.0",
        "stream-http": "^3.2.0",
        "timers-browserify": "^2.0.12",
        "url": "^0.11.3",
        "electron-is-dev": "^3.0.1",
        "electron-updater": "^6.1.8",
        "util": "^0.12.5",
        "wait-on": "^7.2.0"
    },
    "main": "public/electron.js",
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "app": "concurrently \"SET BROWSER=none&&yarn start\" \"wait-on http://localhost:3000 && electron .\"",
        "epw": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            "last 1 electron version",
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 electron version",
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "electron": "^29.1.0",
        "electron-builder": "^24.13.3",
        "webpack-node-externals": "^3.0.0"
    },
    "build": {
        "appId": "com.Onduline.OndulineMagazynier",
        "productName": "Onduline Magazynier",
        "copyright": "Copyright @2024-2025 Mikołaj Laskowski",
        "buildVersion": "1.5.2",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "public"
        },
        "mac": {
            "target": "dmg"
        },
        "win": {
            "icon": "public/favicon.ico",
            "target": "nsis"
        },
        "linux": {
            "target": "deb"
        }
    }
}
